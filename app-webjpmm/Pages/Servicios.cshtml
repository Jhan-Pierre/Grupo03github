@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Code Creators</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/service.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/app_webjpmm.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>


<section class="web-design-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="section-title">DISEÑO DE PAGINAS WEB</h2>
                <p class="service-description">
                    Diseñamos Páginas Web integrales con enfoque comercial para diferenciarte en el mercado.
                </p>
            </div>
            <div class="col-md-6">
                <img src="~/img/111.png" alt="Camino al Éxito" class="img-fluid">
            </div>
        </div>
    </div>
</section>


        <section class="web-design-section">
            <div class="container">
                <div class="row mt-4">
                    <div class="col-md-6">
                        <img src="~/img/5024126.jpg" alt="Camino al Éxito" class="img-fluid">
                    </div>

                    <div class="col-md-6">
                        <h2 class="section-title">CREAMOS TU CAMINO AL ÉXITO</h2>
                        <p class="section-subtitle">Más de 10 Años y 200 Clientes</p>
                        <p class="service-description">
                            Diseñamos el Sitio Web que necesitas. Contamos con la experiencia y los profesionales más capacitados para brindarte un servicio integral de Marketing Digital y Diseño Web que te permita diferenciarte en el mercado.
                        </p>
                    </div>
                </div>
            </div>
        </section>



<section class="offer-section">
    <div class="container">
        <h2 class="section-title">LO QUE OFRECEMOS</h2>
        <div class="offer-content">
            <div class="left-column">
                <ul class="offer-list">
                    <li>
                        <strong>Administrador de contenido</strong>
                        <p>Desde un panel de administración podrás actualizar tu información.</p>
                    </li>
                    <li>
                        <strong>Más contactos o ventas</strong>
                        <p>Flujo de navegación optimizado para conseguir conversiones.</p>
                    </li>
                    <li>
                        <strong>Optimizado para SEO</strong>
                        <p>Posicionamiento Web.</p>
                    </li>
                </ul>
            </div>
            <div class="right-column">
                <ul class="offer-list">
                    <li>
                        <strong>Responsive</strong>
                        <p>Adaptable a dispositivos móviles.</p>
                    </li>
                    <li>
                        <strong>Estrategias de marketing</strong>
                        <p>Desarrollo Web aplicando estrategias de marketing sobre el sitio web.</p>
                    </li>
                    <li>
                        <strong>Rápido tiempo de Desarrollo</strong>
                        <p>5 días o menos.</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>


        <!-- Solicitar cotización -->
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <a href="#" class="btn btn-primary btn-lg">Solicitar cotización</a>
            </div>
        </div>
    </div>
</section>